accent = #4bc98a

[bar/mybar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 30px
offset-x = 0%
offset-y = 0%
radius = 0
fixed-center = false
bottom = true
underline-size = 0

