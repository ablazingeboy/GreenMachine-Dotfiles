[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format-prefix-font = 5
format-prefix-foreground = ${colors.accent}
format = <label>
exec = python /home/human/Scripts/spotify_status.py -f '{song} - {artist}' -t 64

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

